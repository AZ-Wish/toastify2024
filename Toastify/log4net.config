<?xml version="1.0" encoding="utf-8" ?>
<log4net threshold="ALL">
  <!-- ConsoleAppender -->
  <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <footer value="&#13;&#10;" />
      <conversionPattern value="%date{HH:mm:ss.fff} %-5level [%type.%method, %line] (%thread) – %message%newline%exception" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="DEBUG" />
      <levelMax value="FATAL" />
    </filter>
  </appender>

  <!-- RollingFileAppender -->
  <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="Toastify.log" />
    <appendToFile value="true" />
    <rollingStyle value="Composite" />
    <datePattern value="yyyy-MM-dd" />
    <maximumFileSize value="2MB" />
    <maxSizeRollBackups value="5" />
    <layout type="log4net.Layout.PatternLayout">
      <footer value="&#13;&#10;" />
      <conversionPattern value="%date{HH:mm:ss.fffK} %-5level [%type.%method, %line] (%thread) – %message%newline%exception" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="INFO" />
      <levelMax value="FATAL" />
    </filter>
  </appender>

  <!-- Root logger -->
  <root>
    <level value="INFO" />
    <appender-ref ref="ConsoleAppender" />
    <appender-ref ref="RollingFileAppender" />
  </root>
</log4net>